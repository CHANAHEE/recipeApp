<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/recyclerview_cv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="20dp">
        <ImageView
            android:id="@+id/recyclerview_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher_round"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/recyclerview_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/recyclerview_cv"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:fontFamily="@font/dovemayo_gothic"
        android:textColor="@color/black"
        android:text="Sample"/>

    <TextView
        android:id="@+id/recyclerview_tv_hashtag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/recyclerview_cv"
        android:layout_below="@id/recyclerview_tv_title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:fontFamily="@font/dovemayo_gothic"
        android:textColor="#888888"
        android:text="Sample"/>
</RelativeLayout>